<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overall_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.spencetyle.notes_app.subjectsJava">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:fontFamily="@font/concert_one"
            android:gravity="center"
            android:text="ZyNotes"
            android:paddingBottom="10dp"
            android:text="Notes App"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recently Viewed"
            android:textSize="20sp" />
            android:onClick="onClick"


        <Button
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:freezesText="false"
            android:includeFontPadding="true"
            android:text="Subjects"
            android:textSize="14sp" />
            android:layout_weight="1"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/noteTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/madeleineTestColor"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/redoxTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/didact_gothic"
                android:padding="10dp"
                android:text="Redox Reactions"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/shareButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="?attr/actionModeShareDrawable" />

        </LinearLayout>

        <EditText
            android:id="@+id/redoxText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="When writing equations:   \n- charges must balance.    \n- Add water to balance oxygen   \n- Add hydrogen ions to balance water. \n..." />

        <LinearLayout
            android:id="@+id/noteTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/madeleineTestColor"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/emissionsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/didact_gothic"
                android:padding="10dp"
                android:text="Emission Spectra"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/shareButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                app:srcCompat="?attr/actionModeShareDrawable" />

        </LinearLayout>

        <EditText
            android:id="@+id/EmissionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="- Energy is added by heat, light or electricity.\n- Electrons absorb energy and are promoted to higher energy shell\n- Electron then drops to..." />

    </LinearLayout>

</LinearLayout>
